@model BusinessLayer.Models.TeacherListVM
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="page-header">
        <h1>Register</h1>
    </div>
</div>

@using (Html.BeginForm("Register", "Account", "POST"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container">
        <form role="form">
   
                   
        <div class="form-group row">
            <div class="col-sm-2">
                <label class="control-label col-sm-2" for="text">Username:</label>
            </div>
            <div class="col-sm-4">
                <input name="userName" type="text" class="form-control" id="txt" placeholder="Enter username" required/>
                @*@Html.ValidationMessageFor(model => model.UserName)*@
            </div>
        </div>
            <div class="form-group row" >
                <div class="col-sm-2">
                    <label class="control-label col-sm-2" for="password">Password:</label>
                </div>                   
                    <div class="col-sm-4">
                        <input name="Password" type="password" class="form-control" id="pwd" placeholder="Enter password" required/>
                        @*@Html.ValidationMessageFor(model => model.Password)*@
                    </div>
                </div>
            
        <div class="form-group row">
            <div class="col-sm-2">
                <label class="control-label col-sm-2" for="email">Email:</label>
            </div>
                <div class="col-sm-4">
                    <input name="Email" type="email" class="form-control" id="email" placeholder="Enter email" required/>
                    @*@Html.ValidationMessageFor(model => model.Email)*@
                </div>
            </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label for="sel1">Teacher Name:</label>
            </div>
            <div class="col-sm-4">
                <select class="form-control col-sm-2" name="TeacherName" id="sel1">

                    @foreach (var item in Model.TeacherNameList)
                    {

                        <option value="@item">@item</option>
                    }
                </select>
            </div>
        </div>

                <p>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </p>
            
        </form>
    </div>
    

   
}


