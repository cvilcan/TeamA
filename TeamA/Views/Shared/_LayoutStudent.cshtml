<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <h2>Welcome!</h2>

        <div class="row">
            <div class="col-md-10">
                <ul class="nav nav-tabs">
                    <li>@Html.ActionLink("Home", "Index", "Student", new { data_toggle = "pill" })</li>
                    <li>@Html.ActionLink("View all finished homework", "ViewAllFinishedHomework", "Student", new { data_toggle = "pill" })</li>
                    <li>@Html.ActionLink("View All pending homework", "ViewAllPendingHomework", "Student", new { data_toggle = "pill" })</li>
                </ul>
            </div>
            <div class="col-md-2">
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>


    <div class="container">

        <div class="panel panel-default">
            <div class="panel-body">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
        </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>