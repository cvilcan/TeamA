@model string



@{
    ViewBag.Title = "ViewStudentHomework";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    
}

<h2>ViewStudentHomework</h2>
@Html.TextArea("fileText", Model, 50, 100, null)



    @using (Html.BeginForm("InsertCommentOrStatus", "Teacher", FormMethod.Post))
    {



        <div align="left">

            <div>
                @Html.Label("Comment")
            </div>
            @Html.TextArea("comment", "", 5, 40, null)
            <input type="submit" id="button" value="Submit Comment" class="bg-success btn-default" />
        </div>
        @Html.Hidden("uploadId");
    }

    @using (Html.BeginForm("InsertGradeOrStatus", "Teacher", FormMethod.Post))
    {
        <div align="left">
            @Html.Label("Grade")


            @*@Html.TextBox("grade", "", new { style = "background-color:whiteSmoke;width:40px; color:Black; font-weight:bold"})*@
            <input type="text" name="grade" id="grade" maxlength="2" max="10" min="1" onblur="minmax(document.getElementById('grade').innerHTML)" />

            <input type="submit" id="button" class="bg-success btn-success" />
        </div>

        @Html.Hidden("uploadId");

    }

    @using (Html.BeginForm("InsertStatus", "Teacher", FormMethod.Post))
{
    <div align="center">
        <input type="submit" id="button" class="bg-success btn-danger" value="Reject Homework" />
    </div>
    @Html.Hidden("uploadId");
}





<script type="text/javascript">

   
    function minmax(value) {
        if (parseInt(value) < 0 || isNaN(value))
            return 0;
        else if (parseInt(value) > 10)
            return 10;
        else return value;
    }
</script>
