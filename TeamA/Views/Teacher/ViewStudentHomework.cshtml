@model string



@{
    ViewBag.Title = "ViewStudentHomework";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    
}

<h2>ViewStudentHomework</h2>

@using (Html.BeginForm("InsertCommentOrGradeOrStatus", "Teacher", new {  }, FormMethod.Post))
{
@Html.TextArea("fileText", Model, 50, 100, null)


@Html.TextBox("Comment")


@Html.Label("Grade", (string)ViewBag.Grade)


@Html.TextBox("Grade", "", new { style = "background-color:whiteSmoke;width:2%; color:Black; font-weight:bold", title = "Enter Grade" })


<button type="submit" id="button" class="bg-success"/>
}