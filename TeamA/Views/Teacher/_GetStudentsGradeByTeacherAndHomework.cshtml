@model Tuple<List<AccessModels.Models.StudentToHomework>, int>

<div class="container">
    @Html.ActionLink("See in PDF", "GenerateReportStudGradePDF", "Teacher", new { homeworkID = Model.Item2 }, new { @class = "btn btn-primary btn-sm text-right pdfButton" })
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">

            <table class="table">
                <thead>
                    <tr class="success">
                        <th>Student ID</th>
                        <th>Upload ID</th>
                        <th>Upload Date</th>
                        <th>Grade</th>
                        <th>Student Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item1)
                    {
                        <tr class="info">
                            <td>@Html.DisplayFor(modelItem => item.StudentUserID)</td>
                            <td>@Html.DisplayFor(modelItem => item.UploadID)</td>
                            <td>@Html.DisplayFor(modelItem => item.UploadDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                            <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>

</div>