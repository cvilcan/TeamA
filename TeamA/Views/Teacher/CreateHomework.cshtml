@model BusinessLayer.Models.HomeworkVM

@{
   
   
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Homework";
    
}
    


<div class="container">
    <div class="page-header">
        <h1>Create Homework</h1>
    </div>
</div>
    
@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <div class="container">


        <div class="row-fluid">
            <div class="span6">
                <div class="span6 pull-left">
                    @Html.Display("_layout.cshtml")
                    <form role="form">
                        <div class="form-group">
                            <label for="Name">Problem name</label>
                            <input name="Name" type="text" class="form-control" id="Name">
                        </div>
                        <div class="form-group">
                            <label for="Description">Problem Description</label>
                            <input type="text" class="form-control" id="Description" name="Description">
                        </div>
                        <div class="form-group">
                            <label for="dt">Deadline</label>
                            <input name="Deadline" type="text" class="form-control" id="datetimepicker4">
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    $('#datetimepicker4').datetimepicker();
                                });
                            </script>

                        </div>
                        <p>
                            <input type="submit" value="Create" />
                        </p>

                    </form>

                </div>
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "GetOneTeacherHomework")

        </div>


